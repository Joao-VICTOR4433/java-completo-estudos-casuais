import java.util.Scanner;
public class exerciciowhile {
    public static void main (String[]args){
        Scanner leitor=new Scanner(System.in);
        System.out.println("Digite a temperatura da sua cidade: \nOBS:Em celsius");
        int celcius=leitor.nextInt();
        System.out.println("Digite s para iniciar o programa");
        String continuar=leitor.next();
        while(continuar.equalsIgnoreCase("s")){
            //continuar enquanto digitar "S"
            Double temperatura=(9.0*celcius)/5.0+32;
            System.out.printf("A sua temperatura em Fahrenheit foi %.2f",temperatura);
            System.out.println("\nDigite s para continuar o programa e n parar sair: ");
            continuar=leitor.next();
            if (continuar.equalsIgnoreCase("s")){
                System.out.println("\nDigite a temperatura da sua cidade: \nOBS:Em celsius");
                celcius=leitor.nextInt();
            }
        }
        leitor.close();

    }
}
