        //for (inicial=primeiro ou inicio do for;ultimo;incremento=o que vai somar depois da ultima){
        //exemplo for(int i=1= inicio;i<5=enquanto i for menor que 5;i++ adiciona)
        //exemplo pra subtrair for(int i=1;i>=0;i--){
         //for (int i=0;i<n;i=i+1)// ou no lugar de i=i+i pode ser i++
        for(int i=10;i>0;i--){
